{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "build",
    "baseURL": ".",
    "paths": {
      "*": {
        "*": ["*", "generated/*"]
      }
    }
  },
  "exclude": [
    "jspm_packages",
    "node_modules"
  ]
}
